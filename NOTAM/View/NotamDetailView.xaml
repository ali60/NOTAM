<UserControl x:Class="NOTAM.View.NotamDetailView"             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             >    <UserControl.Resources>        <Style x:Key="AftnItemStyle" TargetType="{x:Type ListViewItem}">            <Setter Property="HorizontalContentAlignment" Value="Stretch" />        </Style>        <CollectionViewSource x:Key="AftnData"  Source="{Binding Path=AftnOptions}"/>        <CollectionViewSource x:Key="SelectedAftnData"  Source="{Binding Path=SelectedAftns}"/>        <CollectionViewSource x:Key="ManualAftns"  Source="{Binding Path=ManualAftns}"/>    </UserControl.Resources>    <Grid Margin="4">        <Grid.ColumnDefinitions>            <ColumnDefinition Width="Auto" />            <ColumnDefinition Width="*" />            <ColumnDefinition  Width="Auto" />            <ColumnDefinition  Width="*" />            <ColumnDefinition  Width="100" />        </Grid.ColumnDefinitions>        <Grid.RowDefinitions>            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />            <RowDefinition Height="Auto" />        </Grid.RowDefinitions>        <Grid.Resources>            <DataTemplate DataType="{x:Type ValidationError}">                <TextBlock           FontStyle="Italic"          Foreground="Red"          HorizontalAlignment="Left"          Margin="0,1"          Text="{Binding Path=ErrorContent}"           />            </DataTemplate>        </Grid.Resources>        <!-- Notam Number -->        <Label       Grid.Row="0" Grid.Column="0"       Content="Notam Text"       HorizontalAlignment="Left"      Target="{Binding ElementName=notamTxt}"       />        <TextBox       x:Name="notamTxt"      Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" ScrollViewer.VerticalScrollBarVisibility="Auto" MaxLines="10" AcceptsReturn="True"       Text="{Binding Path=NotamText, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"       Validation.ErrorTemplate="{x:Null}" IsReadOnly="True"      />        <Button  Grid.Row="0" Grid.Column="4"  Content="Print" Margin="4,2"  HorizontalAlignment="Left"                    MinWidth="60" MaxHeight="40"                 Command="{Binding Path=PrintCommand}"></Button>        <!--AFTN-->        <!-- Description-->        <CheckBox        Grid.Row="1" Grid.Column="0"       Content="Aftn Message"       HorizontalAlignment="Left"      IsChecked="{Binding Path=IsAftnMsg, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"        />        <CheckBox        Grid.Row="1" Grid.Column="2"       Content="Remark"       HorizontalAlignment="Left"      IsChecked="{Binding Path=IsRemark, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"        />        <Label       Grid.Row="1" Grid.Column="3"       Content="Initial:" Width="Auto"      HorizontalAlignment="Left"      Target="{Binding ElementName=userTxt}" Margin="0,1,0,0" Grid.RowSpan="3" />        <TextBox x:Name="userTxt"  Grid.Row="1" MinWidth="50" Grid.Column="3" HorizontalAlignment="Left" Text="{Binding Path=User, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Margin="49,0,0,0"></TextBox>        <!-- SAVE BUTTON -->        <Button       Grid.Row="1" Grid.Column="4"      Command="{Binding Path=SaveCommand}"      Content="_Save"      HorizontalAlignment="Left"      Margin="4,2"       MinWidth="60"       />        <TextBox       x:Name="descriptionAFTNTxt"      Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" MaxLines="10" VerticalScrollBarVisibility="Auto"       Text="{Binding Path=DescriptionAFTN, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"        Validation.ErrorTemplate="{x:Null}" TextWrapping="Wrap"  AcceptsReturn="True" IsEnabled="{Binding Path=IsAftnMsg}" />        <TextBox       x:Name="descriptionRemarkTxt"      Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto" MaxLines="10"       Text="{Binding Path=DescriptionRemark, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"        Validation.ErrorTemplate="{x:Null}" TextWrapping="Wrap"  AcceptsReturn="True" IsEnabled="{Binding Path=IsRemark}" />        <Label       Grid.Row="3" Grid.Column="0"       Content="File:"       HorizontalAlignment="Left"      Target="{Binding ElementName=fileTxt}"      />        <TextBox       x:Name="fileTxt"      Grid.Row="3" Grid.Column="1"        Text="{Binding Path=FilePath, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"        Validation.ErrorTemplate="{x:Null}"  />        <Button  Grid.Row="3" Grid.Column="2"  Content="Browse" Margin="0,2,20,2" HorizontalAlignment="Left" Command="{Binding Path=OpenFileCommand}"></Button>        <Button  Grid.Row="4" Grid.Column="2"  Content="Send Default" Margin="0,2,20,2" HorizontalAlignment="Left" Command="{Binding Path=SendDefaultCommand}"></Button>        <GroupBox Header="Individual Series" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">            <Grid Margin="20">                <Grid.ColumnDefinitions>                    <ColumnDefinition Width="*" />                    <ColumnDefinition Width="20" />                    <ColumnDefinition  Width="*" />                    <ColumnDefinition  Width="*" />                </Grid.ColumnDefinitions>                <Grid.RowDefinitions>                    <RowDefinition Height="Auto" />                    <RowDefinition Height="Auto" />                    <RowDefinition Height="Auto" />                    <RowDefinition Height="*" />                </Grid.RowDefinitions>                <Label Grid.Row="0" Grid.Column="0" Content="AFTN"  ></Label>                <TextBox  Grid.Row="1" Grid.Column="0" Text="{Binding Path=ManualAftn}"  ></TextBox>                <Button Grid.Row="1" Grid.Column="1" Content=">" Command="{Binding Path=AddManualAftnCommand}"></Button>                <Button Grid.Row="2" Grid.Column="1" Content="&lt;" Command="{Binding Path=RemoveManualAftnCommand}" Click="Button_Click_2"></Button>                <ListBox Grid.Row="1" Grid.Column="2" Grid.RowSpan="3"></ListBox>                <ListView Name="aftnManualListView"  Grid.Row="1" Grid.Column="2" Grid.RowSpan="3" SelectionMode="Multiple"                         DataContext="{StaticResource ManualAftns}"  ItemContainerStyle="{StaticResource AftnItemStyle}" ItemsSource="{Binding}"                          SelectedItem="{Binding Path=RemovedManualAftn}"                          >                </ListView>            </Grid>        </GroupBox>        <!--Distribution-->        <GroupBox Header="Distribution Series" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2">            <Grid Margin="20"   >                <Grid.ColumnDefinitions>                    <ColumnDefinition Width="*" />                    <ColumnDefinition Width="20" />                    <ColumnDefinition  Width="*" />                    <ColumnDefinition  Width="*" />                </Grid.ColumnDefinitions>                <Grid.RowDefinitions>                    <RowDefinition Height="Auto" />                    <RowDefinition Height="20" />                    <RowDefinition Height="100" />                </Grid.RowDefinitions>                <Label Grid.Row="0" Grid.Column="0" Content="Destination List" ></Label>                <ListView Name="aftnListView"  Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"                         DataContext="{StaticResource AftnData}"  SelectedValue="{Binding Path=SelectedAftn,Mode= TwoWay}"  ItemContainerStyle="{StaticResource AftnItemStyle}"      ItemsSource="{Binding}">                    <ListView.View>                        <GridView>                            <GridViewColumn DisplayMemberBinding="{Binding Path=Series}"/>                        </GridView>                    </ListView.View>                </ListView>                <Button Grid.Row="1" Grid.Column="1" Content=">" Command="{Binding Path=AddAftnCommand}" Click="Button_Click"></Button>                <Button Grid.Row="2" Grid.Column="1" Content="&lt;" Height="20 " Command="{Binding Path=RemoveAftnCommand}" Click="Button_Click_1" />                <Label Grid.Row="0" Grid.Column="2" Content="Dest. AFTN" ></Label>                <ListView Name="aftnSelectedListView" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" SelectionMode="Multiple"                         DataContext="{StaticResource SelectedAftnData}" SelectedItem="{Binding Path=RemovedAftn}"    ItemContainerStyle="{StaticResource AftnItemStyle}"      ItemsSource="{Binding}">                    <ListView.View>                        <GridView>                            <GridViewColumn DisplayMemberBinding="{Binding Path=Series}"/>                        </GridView>                    </ListView.View>                </ListView>            </Grid>        </GroupBox>        <!-- SAVE BUTTON -->        <Button       Grid.Row="10" Grid.Column="3"      Command="{Binding Path=SendCommand}"      Content="_Send"      HorizontalAlignment="Left"      Margin="4,2"       MinWidth="60"       />
        <TextBox x:Name="TxtCountPrint" Grid.Column="3" HorizontalAlignment="Left" Height="24" Margin="49,0,0,0" Grid.Row="3"  Text="{Binding Path=TxtCountPrint}"  TextWrapping="Wrap" VerticalAlignment="Top" Width="50"/>
        <Label x:Name="lblPrintCount" Content="count print:" Grid.Column="2" HorizontalAlignment="Left" Margin="70,0,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.ColumnSpan="2"/>    </Grid></UserControl>