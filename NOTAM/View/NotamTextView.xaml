      Grid.Row="15" Grid.Column="4"
      Command="{Binding Path=SaveCommand}"
      Content="_Save"
      HorizontalAlignment="Left"
      Margin="4,2" 
      MinWidth="60" 
      />-->
        </Grid>
</UserControl>
